<div id="container_p">
<div class="d-flex justify-content-center">
<div style="width: 50%">
<h2 style="text-align: center; padding: 20px">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <form>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder:"Email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"btn btn-outline-dark" %>
  </div>
  </form>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
