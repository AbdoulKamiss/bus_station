<div class="container", style="padding-top: 100px">
<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>
<div class="d-flex justify-content-center">
<div style="width: 50%">
<h2 style="text-align: center; padding: 20px">Edit Travel</h2>

<%= form_with(model: @travel, url: travel_path(@travel), local: true, method: :patch) do |form| %>
  <form>
  <div class="form-group">
    <%= form.label :date %></br>
    <%= form.date_field :date, class:"input"  %>
  </div>

  <div class="form-group">
    <%= form.label :time %></br>
    <%= form.time_field :time, class:"input"  %>
  </div>

  <div class="form-group">
    <%= form.label :duration %></br>
    <%= form.number_field :duration, class:"input"  %>
  </div>

  <div class="form-group">
    <%= form.label :starting_station_id %></br>
    <%= form.collection_select :starting_station_id, Station.all, :id, :name, class:"input"  %>
  </div>

  <div class="form-group">
    <%= form.label :destination_station_id %></br>
    <%= form.collection_select :destination_station_id, Station.all, :id, :name, class:"input"  %>
  </div>

  <div class="actions">
    <%= form.submit "Update", class:"btn btn-outline-dark" %>
  </div>
  </form>
<% end %>
</br>
<span><%= link_to t("common.back"), travels_path, id: "back", class:"btn btn-dark" %></span>
</div>
</div>
