<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1>Travels Index Page</h1>

<table>
  <thead>
    <tr>
      <th>Starting |</th>
      <th>Destination |</th>
      <th>Date |</th>
      <th>Time |</th>
      <th>Duration</th>
    </tr>
  </thead>
  <tbody>
    <% @travels.each do |travel| %>
      <tr>
        <td><%= travel.starting_station.city %></td>
        <td><%= travel.destination_station.city %></td>
        <td><%= travel.formatted_date %></td>
        <td><%= travel.formatted_time %></td>
        <td><%= travel.formatted_duration %></td>
        <td class='td-booking'>
            <%= button_to 'Book Flight',
                new_booking_path,
                method: :get,
                params: { travel_id: travel.id },
                id: 'booking-button' %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @travels %>