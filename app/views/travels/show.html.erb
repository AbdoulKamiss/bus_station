<div class="container" style="padding-top: 100px">
<div class="notice">
      <% if flash[:notice] %>
         <div class="alert alert-success"><%= flash[:notice] %></div>
      <% end %>
   </div>  
<div class="d-flex justify-content-center">
<div style="width: 50%">
<h2 style="text-align: center; padding: 20px">Show Travel Page</h2>

<div class='d-flex justify-content-around' style="font-size: 50px">
   <span><%= @travel.starting_station.city %></span>
   <i class="bi bi-bus-front"></i>
   <span><%= @travel.destination_station.city %></span>
</div>
<span class="d-flex justify-content-center"><p style="font-size:20px">Scheduled departure on <%= @travel.formatted_date %></p></span>
<span class="d-flex justify-content-center"><p style="font-size:20px">At <%= @travel.formatted_time %></p></span>
<span class="d-flex justify-content-center"><p style="font-size:20px">For a duration of <%= @travel.formatted_duration %></p></span>

<div class="d-flex justify-content-center">
<% if current_user.admin? %> 
   <%= button_to 'Edit', edit_travel_path(@travel), method: :get, class:"btn btn-outline-dark", style:"margin-right:20px" %>
   <%= button_to 'Delete', travel_path(@travel), method: :delete, data: {confirm: "Are you sure?" }, class:"btn btn-dark" %>
<% else %>
   <%= button_to 'Book Travel', new_booking_path, method: :get, params: { travel_id: @travel.id }, class:"btn btn-outline-dark" %>
<% end %>
</div>
<%= link_to 'Back', travels_path, id: "back", class:"btn btn-dark" %>
</div>
</div>
</div>
