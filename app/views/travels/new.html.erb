<div id="container_p">
  <div class="notice">
    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible show fade">
        <%= flash[:notice] %>
        <button type="button" class="close" data-dismiss="alert">
          <span>&times;</span>
        </button>
      </div>
    <% end %>
  </div>  
  <div class="d-flex justify-content-around row">
    <div class="col-11 col-sm-8 col-md-6">
      <h2 style="text-align: center; padding: 20px">Création de voyage</h2>

      <%= form_with(model: @travel, url: travels_path, local: true) do |form| %>
        <% if @travel.errors.any? %>
            <h2><%= @travel.errors.count %> erreurs s'est produite</h2>
            <ul>
            <% @travel.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
        <% end %>
        <form>  
          <div class="form-group">
            <%= form.label :date %><br />
            <%= form.date_field :date, class:"input" %>
          </div>

          <div class="form-group">
            <%= form.label :time %><br />
            <%= form.time_field :time, class:"input" %>
          </div>

          <div class="form-group">
            <%= form.label :duration %><br />
            <%= form.number_field :duration, class:"input" %>
          </div>

          <div class="form-group">
            <%= form.label :starting_station_id %><br />
            <%= form.collection_select :starting_station_id, Station.all, :id, :name, { prompt: "Départ" } %>
          </div>

          <div class="form-group">
            <%= form.label :destination_station_id %><br />
            <%= form.collection_select :destination_station_id, Station.all, :id, :name, { prompt: "Arrivée" } %>
          </div>

          <div class="actions">
            <%= form.submit "Créer", class:"btn btn-outline-dark" %>
          </div>
        </form>
      <% end %>
      <div class="py-3"><%= link_to "Retour", travels_path, id: "back", class:"btn btn-dark" %></div>
    </div>
  </div>
</div>
